<button class="p-4" id="menu-btn"
	><svg
		class="overflow-visible"
		width="36"
		height="12"
		viewBox="0 0 36 12"
		fill="none"
		xmlns="http://www.w3.org/2000/svg"
	>
		<rect class="menu-bar h-[2px]"></rect>
		<rect class="menu-bar h-[2px]" y="10"></rect>
	</svg>
</button>

<dialog id="dialog">
	Content here
	<button class="close">close</button>
</dialog>

<style>
	#menu-btn {
		--ANIMATION-SPEED: 0.6s;
	}
	.menu-bar {
		fill: var(--bg-700);
		width: 100%;
		transition: transform var(--ANIMATION-SPEED) ease-in-out;
	}

	.open .menu-bar:first-of-type {
		transform: translateY(-8px) rotate(45deg);
	}
	.open .menu-bar:last-of-type {
		transform: translateX(-8px) translateY(10px) rotate(-45deg);
	}

	.closed .menu-bar:first-of-type {
		transform: translateX(0px) translateY(0px) rotate(0deg);
	}
	.closed .menu-bar:last-of-type {
		transform: translateX(0px) translateY(0px) rotate(0deg);
	}

	dialog[open] {
		opacity: 1;
		transform: scaleY(1);
	}

	dialog {
		opacity: 0;
		transform: scaleY(0);
		transition:
			opacity 0.7s ease-out,
			transform 0.7s ease-out,
			overlay 0.7s ease-out allow-discrete,
			display 0.7s ease-out allow-discrete;
	}

	dialog::backdrop {
		background-color: rgb(0 0 0 / 0%);
		transition:
			display 0.7s allow-discrete,
			overlay 0.7s allow-discrete,
			background-color 0.7s;
	}

	dialog[open]::backdrop {
		background-color: rgb(0 0 0 / 25%);
	}

	@starting-style {
		dialog[open]::backdrop {
			background-color: rgb(0 0 0 / 0%);
		}
	}
</style>
